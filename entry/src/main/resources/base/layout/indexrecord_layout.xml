<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="55vp"
    ohos:width="match_parent"
    ohos:margin="3vp"
    ohos:orientation="horizontal"
    ohos:id="$+id:indexrecord_layout"
    ohos:padding="5vp">

    <DirectionalLayout
        ohos:left_margin="8vp"
        ohos:height="match_parent"
        ohos:orientation="vertical"
        ohos:width="match_content">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="22fp"
            ohos:id="$+id:bigtitle_text"
            ohos:text="11日">

        </Text>

        <Text
            ohos:id="$+id:smallitle_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="2022.11"
            ohos:text_color="#8B8A87"
            ohos:text_size="12fp"
            >
        </Text>


    </DirectionalLayout>


    <DirectionalLayout
        ohos:height="match_parent"
        ohos:left_margin="15vp"
        ohos:orientation="vertical"
        ohos:width="match_content">

        <DirectionalLayout
            ohos:top_margin="3vp"
            ohos:height="match_content"
            ohos:orientation="horizontal"
            ohos:width="match_content">

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="18fp"
                ohos:id="$+id:balance_text"
                ohos:text="100.00">

            </Text>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="结余"
                ohos:left_margin="3vp"
                ohos:text_color="#8B8A87"
                ohos:text_size="12fp"
                >
            </Text>


        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:orientation="horizontal"
            ohos:width="match_content">


            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="收入"
                ohos:text_color="#F1533A"
                ohos:text_size="12fp"
                >
            </Text>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:id="$+id:input_text"
                ohos:left_margin="3vp"
                ohos:text="500.00"
                ohos:text_color="#8B8A87"
                ohos:text_size="12fp"
                >
            </Text>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text=" | "
                ohos:text_color="#8B8A87"
                ohos:text_size="12fp"
                >
            </Text>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="支出"
                ohos:text_color="#14BA8A"
                ohos:text_size="12fp"
                >
            </Text>

            <Text
                ohos:left_margin="3vp"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:id="$+id:output_text"
                ohos:text="400.00"
                ohos:text_color="#FF8B8787"
                ohos:text_size="12fp"
                >
            </Text>


        </DirectionalLayout>



    </DirectionalLayout>




</DirectionalLayout>