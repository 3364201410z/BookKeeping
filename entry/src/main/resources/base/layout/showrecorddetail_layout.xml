<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:left_padding="20vp"
    ohos:orientation="vertical"
    ohos:right_padding="20vp"
    >

    <Image
        ohos:height="150fp"
        ohos:width="150fp"
        ohos:layout_alignment="center"
        ohos:scale_mode="stretch"
        ohos:image_src="$media:nianai"
        ohos:id="$+id:icon_image">
    </Image>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:left_margin="30fp"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"
            ohos:top_margin="20fp"
            >

            <Image
                ohos:height="20fp"
                ohos:width="20fp"
                ohos:image_src="$media:shouru"
                ohos:scale_mode="stretch"
                >
            </Image>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="10vp"
                ohos:text="金额"
                ohos:text_size="18fp">
            </Text>

        </DirectionalLayout>

        <Text
            ohos:id="$+id:money_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="20fp"
            ohos:text="50.00"
            ohos:text_color="#F0543A"
            ohos:text_size="45fp"
            >
        </Text>

    </DirectionalLayout>


    <DirectionalLayout
        ohos:id="$+id:cateitem_layout"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="30fp"
        ohos:orientation="horizontal"
        ohos:top_margin="10fp"
        >

        <Image
            ohos:height="20fp"
            ohos:width="20fp"
            ohos:image_src="$media:cate"
            ohos:scale_mode="stretch"
            >

        </Image>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="10vp"
            ohos:text="分类"
            ohos:text_size="18fp">
        </Text>

        <Text
            ohos:id="$+id:cate_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="20fp"
            ohos:text="收入>生活费"
            ohos:text_size="20fp">

        </Text>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:calender_layout"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="30fp"
        ohos:orientation="horizontal"
        ohos:top_margin="20fp"
        >

        <Image
            ohos:height="20fp"
            ohos:width="20fp"
            ohos:image_src="$media:time"
            ohos:scale_mode="stretch"
            >

        </Image>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="10vp"
            ohos:text="时间"
            ohos:text_size="18fp">
        </Text>

        <Text
            ohos:id="$+id:time_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="20fp"
            ohos:text="今天11月10日 21:18"
            ohos:text_size="20fp">

        </Text>

    </DirectionalLayout>


    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="30fp"
        ohos:orientation="horizontal"
        ohos:top_margin="20fp"
        >

        <Image
            ohos:height="20fp"
            ohos:width="20fp"
            ohos:image_src="$media:memo"
            ohos:scale_mode="stretch"
            >

        </Image>

        <Text
            ohos:id="$+id:add_memo_btn"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="10vp"
            ohos:text="备注"
            ohos:text_size="18fp">
        </Text>

        <Text
            ohos:id="$+id:memo_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="20fp"
            ohos:text_size="20fp">

        </Text>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:bottom_margin="20fp"
        ohos:orientation="horizontal"
        ohos:alignment="center"
        ohos:layout_alignment="center"
        ohos:top_margin="20fp"
        >

        <Button
            ohos:height="30fp"
            ohos:width="200fp"
            ohos:text_size="20fp"
            ohos:text="确定"
            ohos:background_element="#FF9201"
            ohos:text_color="#FFFFFF"
            ohos:id="$+id:ok_btn"
            >

        </Button>

        <Button
            ohos:height="30fp"
            ohos:width="100fp"
            ohos:text_size="20fp"
            ohos:background_element="#ECECEE"
            ohos:text_color="#8B8B8A"
            ohos:left_margin="10fp"
            ohos:text="删除"
            ohos:id="$+id:delete_btn"
            >

        </Button>
    </DirectionalLayout>




</DirectionalLayout>