<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">


    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent">
        <Text
            ohos:id="$+id:current_date_text"
            ohos:height="match_content"
            ohos:margin="10fp"
            ohos:width="match_content"
            ohos:text="今天 2022年11月10日"
            ohos:text_size="20fp"
            >

        </Text>

        <Image
            ohos:height="30vp"
            ohos:width="30vp"
            ohos:scale_mode="stretch"
            ohos:margin="8fp"
            ohos:align_parent_right="true"
            ohos:image_src="$media:selectbtn"
            ohos:id="$+id:selecttime_bnt">

        </Image>



    </DependentLayout>

    <DirectionalLayout
        ohos:height="150fp"
        ohos:background_element="$media:bk1"
        ohos:width="match_parent">

        <Text
            ohos:top_margin="35vp"
            ohos:height="match_content"
            ohos:left_margin="15vp"
            ohos:text_color="#A8FFFFFF"
            ohos:width="match_content"
            ohos:text_size="18fp"
            ohos:text="结余">
        </Text>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="15vp"
            ohos:text_color="#FFFFFF"
            ohos:id="$+id:balance_text"
            ohos:text="-8.00"
            ohos:text_size="40fp">
        </Text>

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:left_margin="15vp"

            ohos:width="match_parent"
            ohos:orientation="horizontal"
            >

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="收入 "
                ohos:text_color="#A8FFFFFF"
                ohos:text_size="20fp">

            </Text>

            <Text
                ohos:id="$+id:current_day_input_money"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="500.00"
                ohos:text_color="#FFFFFF"
                ohos:text_size="20fp">

            </Text>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="10vp"
                ohos:text_color="#A8FFFFFF"
                ohos:right_margin="10vp"
                ohos:text=" | "
                ohos:text_size="20fp">

            </Text>



            <Text
                ohos:id="$+id:text1"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_color="#A8FFFFFF"
                ohos:text="支出 "
                ohos:text_size="20fp">

            </Text>

            <Text
                ohos:id="$+id:current_day_output_money"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_color="#FFFFFF"
                ohos:text="500.00"
                ohos:text_size="20fp">

            </Text>
        </DirectionalLayout>
    </DirectionalLayout>



    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:margin="10vp"

        ohos:orientation="horizontal"
        >

        <Text
            ohos:id="$+id:view_type_text"
            ohos:height="match_content"
            ohos:left_margin="2vp"
            ohos:width="match_content"
            ohos:text="按照天统计"
            ohos:text_color="#8B8A87"
            ohos:text_size="15fp">
        </Text>



    </DirectionalLayout>


    <StackLayout
        ohos:height="match_parent"
        ohos:width="match_parent">

        <ListContainer
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:id="$+id:current_day_record_listcontainer">

        </ListContainer>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="bottom|right"
            ohos:orientation="horizontal"
            ohos:bottom_margin="10fp"
            ohos:right_margin="10fp"
            >

            <Image
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:id="$+id:show_more_btn"
                ohos:image_src="$media:more"
                ohos:margin="10fp"
                ohos:scale_mode="stretch"
                >

            </Image>


        </DirectionalLayout>


    </StackLayout>




</DirectionalLayout>